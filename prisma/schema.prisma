datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid()) @db.VarChar(255)
  email String @unique @db.VarChar(255)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password       Password?
  permittedLists GiftListPermissions[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model GiftList {
  id    String @id @default(cuid()) @db.VarChar(255)
  title String @db.VarChar(255)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items       GiftListItem[]
  permissions GiftListPermissions[]
}

model GiftListItem {
  id     String   @id @default(cuid()) @db.VarChar(255)
  listId String   @db.VarChar(255)
  list   GiftList @relation(fields: [listId], references: [id])

  title    String  @db.VarChar(255)
  url      String? @db.VarChar(2048)
  imageUrl String? @db.VarChar(2048)
  details  String? @db.VarChar(8192)
}

enum Permission {
  OWNER
  EDITOR
  VIEWER
}

model GiftListPermissions {
  user   User     @relation(fields: [userId], references: [id])
  userId String   @db.VarChar(255)
  list   GiftList @relation(fields: [listId], references: [id])
  listId String   @db.VarChar(255)

  permission Permission @default(OWNER)

  @@id([userId, listId])
}
